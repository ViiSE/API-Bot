<?xml version='1.0' encoding='UTF-8' ?>

<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="DataSuite">

    <test name="DataSuiteTest">
        <parameter name="filename" value="/some/file"/>
        <parameter name="hostname" value="www.api.bot"/>
        <parameter name="repeat" value="1"/>

        <parameter name="type" value="Bearer"/>
        <parameter name="token" value="'Token here'"/>

        <parameter name="method" value="GET"/>
        <parameter name="url" value="/rest/points/point"/>

        <classes>
            <class name="ru.fd.api.bot.data.AuthPojoTestNG">
                <parameter name="jsonAuth" value= "{ &quot;type&quot;: &quot;Bearer&quot;, &quot;token&quot;: &quot;'Token here'&quot; }"/>
                <parameter name="jsonAuthWithoutToken" value= "{ &quot;type&quot;: &quot;none&quot; }"/>
            </class>
            <class name="ru.fd.api.bot.data.RequestPojoTestNG">
                <parameter name="jsonReq" value=
                "{ &quot;method&quot;: &quot;GET&quot;,
                   &quot;url&quot;: &quot;/rest/points/point&quot;,
                   &quot;auth&quot;: {
                        &quot;type&quot;: &quot;Bearer&quot;, &quot;token&quot;: &quot;'Token here'&quot;
                   }
                 }"/>
                <parameter name="jsonReqWithoutAuth" value=
                        "{ &quot;method&quot;: &quot;GET&quot;, &quot;url&quot;: &quot;/rest/points/point&quot; }"/>
            </class>
            <class name="ru.fd.api.bot.data.SettingsPojoTestNG">
                <parameter name="jsonSet" value=
                "{ &quot;filename&quot;: &quot;/some/file&quot;,
                   &quot;hostname&quot;: &quot;http://localhost:8080&quot;,
                   &quot;repeat&quot;: 1,
                   &quot;auth&quot;: {
                        &quot;type&quot;: &quot;Bearer&quot;, &quot;token&quot;: &quot;'Token here'&quot;
                   },
                   &quot;requests&quot;: [
                        { &quot;method&quot;: &quot;GET&quot;,
                          &quot;url&quot;: &quot;/rest/points/point&quot;,
                          &quot;auth&quot;: {
                              &quot;type&quot;: &quot;Bearer&quot;, &quot;token&quot;: &quot;'Token here'&quot;
                          }
                        },
                        { &quot;method&quot;: &quot;GET&quot;,
                          &quot;url&quot;: &quot;/rest/points/point&quot;,
                          &quot;auth&quot;: {
                              &quot;type&quot;: &quot;none&quot;
                          }
                        }
                   ]
                 }"/>
                <parameter name="jsonSetWithoutAuth" value=
                "{ &quot;filename&quot;: &quot;/some/file&quot;,
                   &quot;hostname&quot;: &quot;http://localhost:8080&quot;,
                   &quot;repeat&quot;: 1,
                   &quot;requests&quot;: [
                        { &quot;method&quot;: &quot;GET&quot;,
                          &quot;url&quot;: &quot;/rest/points/point&quot;,
                          &quot;auth&quot;: {
                              &quot;type&quot;: &quot;Bearer&quot;, &quot;token&quot;: &quot;'Token here'&quot;
                          }
                        },
                        { &quot;method&quot;: &quot;GET&quot;,
                          &quot;url&quot;: &quot;/rest/points/point&quot;,
                          &quot;auth&quot;: {
                              &quot;type&quot;: &quot;none&quot;
                          }
                        }
                   ]
                }"/>
            </class>
        </classes>
    </test>

</suite>
